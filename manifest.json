{
    "manifest_version": 3,
    "name": "Commit Copier",
    "version": "1.0.0",
    "description": "Copy commits easily with history tracking and beautiful toast notifications",
    "permissions": [
        "storage",
        "clipboardWrite"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "128": "icons/icon.png"
    }
}